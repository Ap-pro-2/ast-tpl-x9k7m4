---
export const prerender = true;

import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import UniversalForm from '../components/forms/UniversalForm.astro';

// Get page data from pages collection
const pagesCollection = await getCollection('pages');
const contactPage = pagesCollection.find(page => page.data.slug === 'contact');

// Fallback data if page not found in collection
const pageData = contactPage?.data || {
  title: 'Contact Us',
  description: 'Get in touch with our coffee experts. We\'d love to hear from you.',
  seo: {
    title: 'Contact Us | AstroPress Coffee',
    description: 'Get in touch with our coffee experts. We\'d love to hear from you.',
    keywords: ['contact us', 'coffee questions', 'get in touch']
  }
};
---

<BaseLayout 
  pageTitle={pageData.seo?.title || pageData.title} 
  description={pageData.seo?.description || pageData.description}
  keywords={pageData.seo?.keywords}
  canonicalUrl={pageData.seo?.canonical || '/contact'}
  ogImage={pageData.seo?.ogImage}
>
  <!-- Contact Us Page -->
  <section class="contact-hero">
    <div class="container max-w-4xl">
      <div class="contact-hero-content">
        <h1 class="contact-hero-title">{pageData.title}</h1>
        <p class="contact-hero-description">{pageData.description}</p>
      </div>
    </div>
  </section>


  <!-- Contact Form and Image Section -->
  <section class="contact-form-section">
    <div class="container">
      <div class="contact-layout">
        <div class="contact-form-wrapper">
          <UniversalForm placement="contact-page" />
        </div>
        <div class="contact-image-wrapper">
          <img 
            src="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" 
            alt="Professional team ready to help with your inquiries"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
/* Contact Hero Section */
.contact-hero {
  padding: 4rem 0 2rem 0;
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
}

.contact-hero-content {
  text-align: center;
  max-width: 600px;
  margin: 0 auto;
}

.contact-hero-title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--text-primary);
  font-family: var(--font-heading);
  margin: 0 0 1rem 0;
  line-height: 1.1;
}

.contact-hero-description {
  font-size: 1.25rem;
  color: var(--text-secondary);
  line-height: 1.6;
  margin: 0;
}

/* Contact Form Section */
.contact-form-section {
  padding: 6rem 0;
  background: var(--bg-secondary);
}

.contact-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.contact-form-wrapper {
  max-width: 100%;
}

.contact-image-wrapper {
  max-width: 100%;
}

.contact-image-wrapper img {
  width: 100%;
  height: auto;
  border-radius: var(--radius-xl);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  object-fit: cover;
  aspect-ratio: 4/3;
}


/* Mobile Responsiveness */
@media (max-width: 1024px) {
  .contact-layout {
    gap: 3rem;
  }
}

@media (max-width: 768px) {
  .contact-hero {
    padding: 3rem 0 1.5rem 0;
  }
  
  .contact-hero-title {
    font-size: 2.25rem;
  }
  
  .contact-hero-description {
    font-size: 1.125rem;
  }
  
  .contact-form-section {
    padding: 4rem 0;
  }
  
  .contact-layout {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .contact-image-wrapper {
    order: -1;
  }
}

@media (max-width: 640px) {
  .contact-hero-title {
    font-size: 1.875rem;
  }
  
  .contact-hero-description {
    font-size: 1rem;
  }
  
  .contact-form-section {
    padding: 3rem 0;
  }
  
  .contact-layout {
    gap: 2rem;
  }
}
</style>