---
/**
 * Section5 - Newsletter Section
 * Universal form handles its own title and styling
 */

import UniversalForm from '../forms/UniversalForm.astro';
---

<!-- Section5 - Newsletter Section -->
<section class="section5-newsletter">
  <div class="container max-w-7xl">
    <div class="section5-content">
      <!-- Universal Form handles its own title -->
      <UniversalForm placement="section5-newsletter" />
    </div>
  </div>
</section>

<style>
/* Section5 Newsletter Styles - Enhanced */
.section5-newsletter {
  padding: 2rem 0 0.5rem 0;
  position: relative;
}

@media (min-width: 1024px) {
  .section5-newsletter {
    padding: 4rem 0 2rem 0;
  }
}

.section5-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3rem;
  text-align: center;
}

/* Newsletter Header */
.section5-header {
  max-width: 600px;
}

.section5-title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  font-family: var(--font-heading);
  margin: 0;
  line-height: 1.2;
}

@media (min-width: 768px) {
  .section5-title {
    font-size: 2.5rem;
  }
}

@media (min-width: 1024px) {
  .section5-title {
    font-size: 2.75rem;
  }
}

/* Newsletter Form Container */
.section5-form {
  width: 100%;
  max-width: 800px;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
  .section5-newsletter {
    padding: 3rem 0 4rem 0;
  }
  
  .section5-content {
    gap: 2rem;
  }
  
  .section5-title {
    font-size: 1.75rem;
  }
}

@media (max-width: 640px) {
  .section5-title {
    font-size: 1.5rem;
  }
  
  .section5-content {
    gap: 1.5rem;
  }
}
</style>