---
/**
 * Section4 - Main Content with Sidebar
 * Layout: Left column (latest articles) + Right sidebar (author card + tags)
 */

import { 
  getAllPosts, 
  getSiteSettings,
  createPaginationData,
  getTagsWithPostCounts
} from '../../core/blogLogic';
import AuthorCard from '../ui/AuthorCard.astro';
import BlogCardHorizontal from '../ui/BlogCardHorizontal.astro';
import SimpleBannerAd from '../ads/SimpleBannerAd.astro';

// Get dynamic data using core logic
const posts = await getAllPosts();
const settings = await getSiteSettings();
const tags = await getTagsWithPostCounts();

// Create pagination data for homepage
const paginationData = createPaginationData(posts, 1, 6);
const page = paginationData;
---

<!-- Section4 - Main Content with Sidebar -->
<section class="section4-main-content py-12 lg:py-16" style="background: var(--bg-primary)">
  <div class="container max-w-7xl">
    <div class="section4-grid">
      
      <!-- Main Content Area -->
      <main class="section4-content">
        <div class="section4-content-inner">
          <div class="section4-header">
            <div class="section4-header-line"></div>
            <h2 class="section4-title">Latest Articles</h2>
          </div>

          <!-- Blog Cards -->
          <div class="section4-articles">
            {page.data.map((post, index) => (
              <div class="section4-article-wrapper">
                <BlogCardHorizontal post={post} />
                {/* Add banner ad after 2nd post */}
                {index === 1 && (
                  <div class="section4-ad-wrapper">
                    <SimpleBannerAd 
                      placement="homepage-between-posts"
                      className="section4-banner-ad"
                    />
                  </div>
                )}
              </div>
            ))}
          </div>

          <!-- Load More Button -->
          {page.lastPage > 1 && (
            <div class="section4-load-more">
              <a href="/blog" class="section4-load-more-btn">
                <span>Explore More Articles</span>
                <svg class="section4-load-more-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          )}
        </div>
      </main>

      <!-- Sticky Sidebar -->
      <aside class="section4-sidebar">
        
        <!-- Author Card -->
        <div class="section4-widget">
          <AuthorCard />
        </div>
        
        <!-- Tags Section -->
        {tags.length > 0 && (
          <div class="section4-widget section4-tags-widget">
            <div class="section4-widget-header">
              <div class="section4-widget-line"></div>
              <h3 class="section4-widget-title">Tags</h3>
            </div>
            
            <div class="section4-tags-list">
              {tags.slice(0, 6).map((tag) => (
                <a href={`/tags/${tag.data.slug}`} class="section4-tag-item">
                  <span class="section4-tag-name">#{tag.data.name}</span>
                  <span class="section4-tag-count">{tag.postCount}</span>
                </a>
              ))}
            </div>
            
            <!-- View All Tags -->
            <div class="section4-tags-footer">
              <a href="/tags" class="section4-tags-all">
                <span>Browse All Tags</span>
                <svg class="section4-tags-all-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        )}
      </aside>
    </div>
  </div>
</section>

<style>
/* Section4 Styles - Main Content with Sidebar */
.section4-main-content {
  background: var(--bg-primary);
  padding: 3rem 0 4rem 0;
}

@media (min-width: 1024px) {
  .section4-main-content {
    padding: 4rem 0 6rem 0;
  }
}

.section4-grid {
  display: grid;
  gap: 3rem;
  grid-template-columns: 1fr;
}

@media (min-width: 1024px) {
  .section4-grid {
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }
}

/* Main Content Area */
.section4-content-inner {
  display: flex;
  flex-direction: column;
}

.section4-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
}

.section4-header-line {
  width: 4px;
  height: 2rem;
  background: var(--color-primary-accessible);
  border-radius: var(--radius-full);
}

.section4-title {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--text-primary);
  font-family: var(--font-heading);
  margin: 0;
}

.section4-articles {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.section4-article-wrapper {
  display: contents;
}

.section4-ad-wrapper {
  margin: 2rem 0;
}

.section4-load-more {
  margin-top: 3rem;
  text-align: center;
}

.section4-load-more-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--color-primary-accessible);
  color: white;
  font-weight: 600;
  border-radius: var(--radius-lg);
  transition: all var(--animation-duration) var(--animation-easing);
  text-decoration: none;
}

.section4-load-more-btn:hover {
  background: var(--color-primary-accessible-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  gap: 0.75rem;
}

.section4-load-more-icon {
  width: 1rem;
  height: 1rem;
  transition: transform var(--animation-duration) var(--animation-easing);
}

.section4-load-more-btn:hover .section4-load-more-icon {
  transform: translateX(4px);
}

/* Sidebar Styles */
.section4-sidebar {
  position: sticky;
  top: 6rem;
  align-self: start;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  height: fit-content;
}

.section4-widget {
  /* Widgets inherit their own styling */
}

.section4-tags-widget {
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-light);
  box-shadow: var(--shadow-md);
  padding: 1.5rem;
  backdrop-filter: blur(4px);
}

.section4-widget-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 2rem;
}

.section4-widget-line {
  width: 4px;
  height: 1.5rem;
  background: var(--color-primary-accessible);
  border-radius: var(--radius-full);
}

.section4-widget-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
  font-family: var(--font-heading);
  margin: 0;
}

.section4-tags-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.section4-tag-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  background: var(--bg-tertiary);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-light);
  transition: all var(--animation-duration) var(--animation-easing);
  text-decoration: none;
}

.section4-tag-item:hover {
  background: var(--bg-primary);
  transform: translateX(6px);
  box-shadow: var(--shadow-md);
}

.section4-tag-name {
  font-weight: 600;
  font-size: 0.875rem;
  color: var(--text-primary);
}

.section4-tag-count {
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.375rem 0.75rem;
  background: var(--color-primary-accessible);
  color: white;
  border-radius: var(--radius-full);
}

.section4-tags-footer {
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--border-light);
}

.section4-tags-all {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-primary-accessible);
  transition: all var(--animation-duration) var(--animation-easing);
  text-decoration: none;
}

.section4-tags-all:hover {
  color: var(--color-primary-accessible-dark);
  gap: 0.75rem;
}

.section4-tags-all-icon {
  width: 1rem;
  height: 1rem;
  transition: transform var(--animation-duration) var(--animation-easing);
}

.section4-tags-all:hover .section4-tags-all-icon {
  transform: translateX(2px);
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
  .section4-main-content {
    padding: 2rem 0 3rem 0;
  }
  
  .section4-grid {
    gap: 2rem;
  }
  
  .section4-title {
    font-size: 1.5rem;
  }
  
  .section4-sidebar {
    position: static;
    top: auto;
  }
}
</style>