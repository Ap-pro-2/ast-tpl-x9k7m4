---
import OptimizedImage from './ui/OptimizedImage.astro';
import ProductSchema from '../core/seo/ProductSchema.astro';
import { getSiteSettings } from '../core/blogLogic';

export interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt: string;
  affiliateUrl: string;
  rating?: number;
  reviewCount?: number;
  brand?: string;
  badge?: string;
  buttonText?: string;
  sectionTitle?: string;
  isFirstProduct?: boolean;
  category?: string;
  id?: string;
  price?: string;
  originalPrice?: string;
  features?: string[];
  pros?: string[];
  cons?: string[];
}

const {
  title,
  description,
  image,
  imageAlt,
  affiliateUrl,
  rating,
  reviewCount,
  brand,
  badge,
  buttonText = "Get It Now",
  sectionTitle,
  isFirstProduct = false,
  category,
  id,
  price,
  originalPrice,
  features,
  pros,
  cons,
} = Astro.props;

// Get site settings for schema
const settings = await getSiteSettings();

// Prepare product data for schema
const productData = {
  id: id || title.toLowerCase().replace(/\s+/g, '-'),
  title,
  description,
  price: price || '$0',
  originalPrice,
  image,
  imageAlt,
  affiliateUrl,
  rating,
  reviewCount,
  brand,
  category,
  features,
  pros,
  cons
};

const stars = rating ? Math.round(rating * 2) / 2 : 0;
const fullStars = Math.floor(stars);
const hasHalfStar = stars % 1 !== 0;
const emptyStars = 5 - Math.ceil(stars);
---

<!-- Include Product Schema for SEO -->
<ProductSchema
  product={productData}
  settings={settings}
/>

<div class={`product-card-sidebar ${isFirstProduct ? 'first-product' : ''}`}>
  <!-- Product Title -->
  <h5 class="sidebar-product-name">{title}</h5>

  <!-- Product Image - Large and Prominent -->
  <div class="sidebar-product-image">
    <OptimizedImage
      src={image}
      alt={imageAlt}
      width={200}
      height={200}
      class="sidebar-product-img"
    />
  </div>

  <!-- Badge - Positioned below image -->
  {badge && (
    <div class="sidebar-product-badge">
      {badge}
    </div>
  )}

  <!-- Rating -->
  {rating && (
    <div class="sidebar-product-rating">
      <div class="sidebar-rating-stars">
        {Array.from({ length: fullStars }, (_, i) => (
          <svg class="sidebar-star sidebar-star-filled" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
        {hasHalfStar && (
          <svg class="sidebar-star sidebar-star-half" viewBox="0 0 20 20" fill="currentColor">
            <defs>
              <linearGradient id="halfGrad">
                <stop offset="50%" stop-color="currentColor"/>
                <stop offset="50%" stop-color="transparent"/>
              </linearGradient>
            </defs>
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" fill="url(#halfGrad)" />
          </svg>
        )}
        {Array.from({ length: emptyStars }, (_, i) => (
          <svg class="sidebar-star sidebar-star-empty" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" stroke-width="1"/>
          </svg>
        ))}
      </div>
      {reviewCount && (
        <span class="sidebar-review-count">({reviewCount})</span>
      )}
    </div>
  )}

  <!-- Price - Removed for cleaner design -->

  <!-- CTA Button -->
  <a
    href={affiliateUrl}
    class="sidebar-product-cta"
    target="_blank"
    rel="noopener noreferrer nofollow"
  >
    {buttonText}
  </a>
</div>

<!-- Mobile Sticky Bar for First Product Only - Outside the hidden div -->
{isFirstProduct && (
  <div class="mobile-sticky-bar" id="mobile-sticky-bar">
    <div class="mobile-sticky-content">
      <div class="mobile-sticky-image">
        <OptimizedImage
          src={image}
          alt={imageAlt}
          width={60}
          height={60}
          class="mobile-sticky-img"
        />
      </div>
      <div class="mobile-sticky-info">
        <h6 class="mobile-sticky-title">{title}</h6>
        {badge && (
          <div class="mobile-sticky-badge-text">
            {badge}
          </div>
        )}
        {rating && (
          <div class="mobile-sticky-rating">
            <div class="mobile-sticky-stars">
              {Array.from({ length: fullStars }, (_, i) => (
                <svg class="mobile-star mobile-star-filled" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
              {hasHalfStar && (
                <svg class="mobile-star mobile-star-half" viewBox="0 0 20 20" fill="currentColor">
                  <defs>
                    <linearGradient id="halfGradMobile">
                      <stop offset="50%" stop-color="currentColor"/>
                      <stop offset="50%" stop-color="transparent"/>
                    </linearGradient>
                  </defs>
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" fill="url(#halfGradMobile)" />
                </svg>
              )}
              {Array.from({ length: emptyStars }, (_, i) => (
                <svg class="mobile-star mobile-star-empty" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" stroke-width="1"/>
                </svg>
              ))}
            </div>
            {reviewCount && (
              <span class="mobile-sticky-review-count">({reviewCount})</span>
            )}
          </div>
        )}
      </div>
      <a
        href={affiliateUrl}
        class="mobile-sticky-cta"
        target="_blank"
        rel="noopener noreferrer nofollow"
      >
        {buttonText}
      </a>
    </div>
  </div>
)}

<style>
/* Clean Card Design - No Boxes Inside Boxes */
.product-card-sidebar {
  margin-bottom: 2rem;
  padding: 1.5rem;
  text-align: center;
  transition: all 0.3s ease;
}

.product-card-sidebar:hover {
  transform: translateY(-2px);
}

/* Product Title - Top */
.sidebar-product-name {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 1rem;
  line-height: 1.3;
}

/* Product Image - Large and Clean */
.sidebar-product-image {
  position: relative;
  width: 180px;
  height: 180px;
  margin: 0 auto 1.25rem;
  border-radius: 16px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.05);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.sidebar-product-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card-sidebar:hover .sidebar-product-img {
  transform: scale(1.05);
}

.sidebar-product-badge {
  background: var(--color-primary);
  color: white;
  font-size: 0.6rem;
  font-weight: 700;
  padding: 6px 12px;
  border-radius: 20px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  margin: 0.75rem auto 0.5rem;
  text-align: center;
  max-width: 200px;
  line-height: 1.2;
  display: block;
}

.sidebar-discount-badge {
  position: absolute;
  top: 8px;
  left: 8px;
  background: #ef4444;
  color: white;
  font-size: 0.6rem;
  font-weight: 700;
  padding: 4px 8px;
  border-radius: 6px;
  text-transform: uppercase;
  z-index: 2;
}

/* Rating - Clean Layout */
.sidebar-product-rating {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.sidebar-rating-stars {
  display: flex;
  gap: 1px;
}

.sidebar-star {
  width: 14px; /* Larger stars for better visibility */
  height: 14px;
}

.sidebar-star-filled {
  color: #fbbf24;
}

.sidebar-star-half {
  color: #fbbf24;
}

.sidebar-star-empty {
  color: var(--text-muted);
  stroke-width: 1;
}

.sidebar-review-count {
  font-size: 0.65rem;
  color: var(--text-secondary);
  margin-left: 0.125rem;
}

/* Pricing styles removed for cleaner design */

/* CTA Button - Large and Attention-Grabbing */
.sidebar-product-cta {
  display: block;
  background: var(--color-primary);
  color: white;
  text-decoration: none;
  font-size: 0.8rem; /* Slightly smaller to prevent cutoff */
  font-weight: 700;
  padding: 0.875rem 1rem; /* Balanced padding */
  border-radius: 8px;
  text-align: center;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.3px; /* Reduced letter spacing */
  white-space: normal; /* Allow text wrapping if needed */
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  width: 100%; /* Take full available width */
  min-height: 44px; /* Ensure minimum touch target */
}

.sidebar-product-cta:hover {
  background: var(--color-primary-dark, #3730a3);
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
}

/* Mobile Responsiveness - Stack vertically on small screens */
@media (max-width: 768px) {
  .sidebar-product-card {
    flex-direction: column;
    text-align: center;
    padding: 1.25rem;
    gap: 1rem;
  }

  .sidebar-product-image {
    width: 100px;
    height: 100px;
    margin: 0 auto;
  }

  .sidebar-product-meta {
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }

  .sidebar-product-name {
    font-size: 1rem;
    text-align: center;
  }

  .sidebar-product-cta {
    font-size: 0.8rem;
    padding: 0.875rem 1rem;
    width: 100%;
    white-space: nowrap;
  }
}

/* Tablet adjustments */
@media (max-width: 1024px) and (min-width: 769px) {
  .sidebar-product-card {
    padding: 1.25rem;
    gap: 1.25rem;
  }

  .sidebar-product-image {
    width: 100px;
    height: 100px;
  }

  .sidebar-product-name {
    font-size: 1rem;
  }

  .sidebar-product-cta {
    font-size: 0.75rem;
    padding: 0.75rem 0.875rem;
  }
}

/* Ultra-compact mode for 5+ products */
@media (min-width: 769px) {
  .product-card-sidebar:nth-child(n+4) {
    margin-bottom: 0.75rem; /* Even less spacing for 4th+ products */
  }

  .product-card-sidebar:nth-child(n+4) .sidebar-product-card {
    padding: 0.75rem; /* More compact padding for 4th+ products */
  }

  .product-card-sidebar:nth-child(n+4) .sidebar-product-image {
    width: 70px;
    height: 70px;
  }

  .product-card-sidebar:nth-child(n+4) .sidebar-product-name {
    font-size: 0.75rem;
    -webkit-line-clamp: 1; /* Single line for 4th+ products */
  }

  .product-card-sidebar:nth-child(n+4) .sidebar-star {
    width: 9px;
    height: 9px;
  }
}

/* Dark mode enhancements */
@media (prefers-color-scheme: dark) {
  .sidebar-product-card {
    background: rgba(255, 255, 255, 0.02);
    border-color: rgba(255, 255, 255, 0.08);
  }

  .sidebar-product-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--color-primary, rgba(99, 102, 241, 0.4));
  }

  .sidebar-product-image {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
}

/* Animation for better UX */
@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.product-card-sidebar {
  animation: slideInRight 0.3s ease-out;
  animation-fill-mode: both;
}

.product-card-sidebar:nth-child(2) { animation-delay: 0.1s; }
.product-card-sidebar:nth-child(3) { animation-delay: 0.2s; }
.product-card-sidebar:nth-child(4) { animation-delay: 0.3s; }
.product-card-sidebar:nth-child(5) { animation-delay: 0.4s; }
.product-card-sidebar:nth-child(6) { animation-delay: 0.5s; }

/* Mobile Sticky Bar - Only for First Product */
.mobile-sticky-bar {
  display: none; /* Hidden by default, show only on mobile */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  background: var(--bg-primary);
  border-top: 1px solid var(--border-light);
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10px);
  animation: slideInUp 0.4s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.mobile-sticky-content {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  max-width: 100vw;
  position: relative;
}

.mobile-sticky-image {
  position: relative;
  width: 60px;
  height: 60px;
  flex-shrink: 0;
  border-radius: 12px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.05);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.mobile-sticky-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.mobile-sticky-badge-text {
  font-size: 0.55rem;
  color: var(--color-primary);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  line-height: 1.1;
  margin-bottom: 0.125rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mobile-sticky-info {
  flex: 1;
  min-width: 0; /* Allow content to shrink */
  overflow: hidden;
}

.mobile-sticky-title {
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 0.25rem;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mobile-sticky-rating {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.mobile-sticky-stars {
  display: flex;
  gap: 1px;
}

.mobile-star {
  width: 12px;
  height: 12px;
}

.mobile-star-filled {
  color: #fbbf24;
}

.mobile-star-half {
  color: #fbbf24;
}

.mobile-star-empty {
  color: var(--text-muted);
  stroke-width: 1;
}

.mobile-sticky-review-count {
  font-size: 0.6rem;
  color: var(--text-secondary);
}

.mobile-sticky-cta {
  background: var(--color-primary);
  color: white;
  text-decoration: none;
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.625rem 1rem;
  border-radius: 8px;
  text-align: center;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  white-space: nowrap;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  min-height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mobile-sticky-cta:hover {
  background: var(--color-primary-dark, #3730a3);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
}


/* Show mobile sticky bar only on mobile devices */
@media (max-width: 768px) {
  .mobile-sticky-bar {
    display: block !important;
  }

  /* Hide the first product from sidebar on mobile since it's in sticky bar */
  .product-card-sidebar.first-product {
    display: none !important;
  }

  /* Add bottom padding to prevent content being hidden */
  .post-content {
    padding-bottom: 100px;
  }
}
</style>