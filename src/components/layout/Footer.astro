---

<!-- Minimalistic Footer -->
<footer
  class="mt-20"
  style="background: var(--bg-secondary); border-top: 1px solid var(--border-light);"
>
  <div class="container max-w-7xl">
    <div class="py-12 lg:py-16">
      <!-- Footer Content -->
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <!-- Brand Section -->
        <div>
          <div class="flex items-center gap-3 mb-4">
            {
              settings.logo ? (
                <img
                  src={settings.logo}
                  alt={`${settings.siteName} logo`}
                  class="w-8 h-8 object-contain"
                />
              ) : (
                <div
                  class="w-8 h-8 flex items-center justify-center"
                  style="background: var(--color-primary); border-radius: var(--radius-md);"
                >
                  <svg
                    class="w-4 h-4 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
              )
            }
            <h3
              class="text-lg font-semibold"
              style="color: var(--text-primary); font-family: var(--font-heading)"
            >
              {settings.siteName}
            </h3>
          </div>
          <p
            class="text-sm leading-relaxed max-w-xs"
            style="color: var(--text-muted); font-family: var(--font-body)"
          >
            {settings.siteDescription}
          </p>
        </div>

        <!-- Recent Posts -->
        <div>
          <h4
            class="text-sm font-medium mb-4"
            style="color: var(--text-primary)"
          >
            Recent Posts
          </h4>
          <ul class="space-y-3">
            {
              recentPosts.map((post) => (
                <li>
                  <a
                    href={`/blog/${post.id}`}
                    class="flex items-start gap-3 group transition-all"
                    style="transition: all var(--animation-duration) var(--animation-easing)"
                    aria-label={`Read ${post.data.title}`}
                  >
                    {post.data.image?.url ? (
                      <OptimizedImage
                        src={post.data.image.url}
                        alt={post.data.image.alt || post.data.title}
                        width={48}
                        height={48}
                        class="w-12 h-12 object-cover flex-shrink-0"
                        style="border-radius: var(--radius-md)"
                      />
                    ) : (
                      <div
                        class="w-12 h-12 flex items-center justify-center flex-shrink-0"
                        style="background: var(--bg-tertiary); border-radius: var(--radius-md)"
                      >
                        <svg
                          class="w-5 h-5"
                          style="color: var(--text-muted)"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                    )}
                    <div class="flex-1 min-w-0">
                      <h5
                        class="text-sm font-medium leading-tight mb-1 group-hover:text-primary transition-colors"
                        style="color: var(--text-primary); transition: color var(--animation-duration) var(--animation-easing)"
                      >
                        {post.data.title.length > 35
                          ? post.data.title.substring(0, 35) + "..."
                          : post.data.title}
                      </h5>
                      <p class="text-xs" style="color: var(--text-muted)">
                        {new Date(post.data.pubDate).toLocaleDateString(
                          "en-US",
                          {
                            month: "short",
                            day: "numeric",
                          },
                        )}
                      </p>
                    </div>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Categories -->
        <div>
          <h4
            class="text-sm font-medium mb-4"
            style="color: var(--text-primary)"
          >
            Categories
          </h4>
          <ul class="space-y-2">
            {
              topCategories.map((category) => (
                <li>
                  <a
                    href={`/categories/${category.data.slug}`}
                    class="text-sm transition-colors flex items-center justify-between"
                    style="color: var(--text-muted); transition: color var(--animation-duration) var(--animation-easing)"
                    onmouseover="this.style.color='var(--color-primary)'"
                    onmouseout="this.style.color='var(--text-muted)'"
                    aria-label={`Browse ${category.data.name} category`}
                  >
                    <span>{category.data.name}</span>
                    <span class="text-xs" style="color: var(--text-muted)">
                      ({category.postCount})
                    </span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Quick Links -->
        <div>
          <h4
            class="text-sm font-medium mb-4"
            style="color: var(--text-primary)"
          >
            Quick Links
          </h4>
          <ul class="space-y-2">
            <li>
              <a
                href="/blog"
                class="text-sm transition-colors"
                style="color: var(--text-muted); transition: color var(--animation-duration) var(--animation-easing)"
                onmouseover="this.style.color='var(--color-primary)'"
                onmouseout="this.style.color='var(--text-muted)'"
                aria-label="View all blog articles"
              >
                All Articles
              </a>
            </li>
            <li>
              <a
                href="/legal/privacy"
                class="text-sm transition-colors"
                style="color: var(--text-muted); transition: color var(--animation-duration) var(--animation-easing)"
                onmouseover="this.style.color='var(--color-primary)'"
                onmouseout="this.style.color='var(--text-muted)'"
                aria-label="Read our privacy policy"
              >
                Privacy Policy
              </a>
            </li>
            <li>
              <a
                href="/legal/terms"
                class="text-sm transition-colors"
                style="color: var(--text-muted); transition: color var(--animation-duration) var(--animation-easing)"
                onmouseover="this.style.color='var(--color-primary)'"
                onmouseout="this.style.color='var(--text-muted)'"
                aria-label="Read our terms of service"
              >
                Terms of Service
              </a>
            </li>
            <li>
              <a
                href="/sitemap"
                class="text-sm transition-colors"
                style="color: var(--text-muted); transition: color var(--animation-duration) var(--animation-easing)"
                onmouseover="this.style.color='var(--color-primary)'"
                onmouseout="this.style.color='var(--text-muted)'"
                aria-label="View site sitemap"
              >
                Sitemap
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Footer Bottom -->
      <div class="pt-6" style="border-top: 1px solid var(--border-light)">
        <div
          class="flex flex-col items-center justify-center gap-4 text-center"
        >
          <p class="text-xs" style="color: var(--text-muted)">
            © {currentYear}
            {settings.siteName}. All rights reserved.
          </p>

          <!-- Dynamic Social Links -->
          {
            activeSocialLinks.length > 0 && (
              <div class="flex items-center gap-2">
                {activeSocialLinks.map((social) => {
                  const url = social.value.startsWith("http")
                    ? social.value
                    : `${social.config.baseUrl}${social.value}`;

                  return (
                    <a
                      href={url}
                      class="w-7 h-7 flex items-center justify-center transition-all"
                      style="color: var(--text-muted); border-radius: var(--radius-md); transition: all var(--animation-duration) var(--animation-easing)"
                      onmouseover="this.style.color='var(--color-primary)'; this.style.transform='translateY(-1px)'"
                      onmouseout="this.style.color='var(--text-muted)'; this.style.transform='translateY(0)'"
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`Follow us on ${social.config.label}`}
                    >
                      <svg
                        class="w-4 h-4"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d={social.config.icon} />
                      </svg>
                    </a>
                  );
                })}
              </div>
            )
          }
        </div>
      </div>

      <!-- Disclaimer Section -->
      {
        settings.disclaimer?.enabled && settings.disclaimer?.text && (
          <div
            class="pt-6 mt-6"
            style="border-top: 1px solid var(--border-light)"
          >
            <div class="text-center">
              <p
                class="text-xs leading-relaxed max-w-4xl mx-auto"
                style="color: var(--text-muted); font-family: var(--font-body); line-height: 1.6;"
              >
                {settings.disclaimer.text}
              </p>
            </div>
          </div>
        )
      }
    </div>
  </div>
</footer>
