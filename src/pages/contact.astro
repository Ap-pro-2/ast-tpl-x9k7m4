---
export const prerender = true;

import { getCollection } from 'astro:content';
import { getSiteSettings } from '../core/blogLogic';
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/forms/ContactForm.astro';

const settings = await getSiteSettings();

// Get page data from pages collection
const pagesCollection = await getCollection('pages');
const contactPage = pagesCollection.find(page => page.data.slug === 'contact');

// Use the existing pattern from about.astro for proper SEO handling
const pageData = contactPage?.data;

// Enhanced SEO data handling
const seoData = {
  pageTitle: pageData?.seo?.title || `Contact Us`,
  description: pageData?.seo?.description || pageData?.description || `Get in touch with ${settings.siteName} experts`,
  keywords: pageData?.seo?.keywords || ['contact us', 'coffee questions', 'get in touch'],
  ogImage: pageData?.seo?.ogImage || settings.defaultOgImage,
  ogImageAlt: `Contact Us - ${settings.siteName}`,
  canonicalUrl: pageData?.seo?.canonical || `${settings.siteUrl}/contact`
};
---

<BaseLayout 
  pageTitle={seoData.pageTitle} 
  description={seoData.description}
  keywords={seoData.keywords}
  ogImage={seoData.ogImage}
  ogImageAlt={seoData.ogImageAlt}
  canonicalUrl={seoData.canonicalUrl}
>
  <!-- Contact Us Page -->
  <section class="contact-hero">
    <div class="container max-w-4xl">
      <div class="contact-hero-content">
        <h1 class="contact-hero-title">{pageData?.title || 'Contact Us'}</h1>
        <p class="contact-hero-description">{pageData?.description || `Get in touch with our ${settings.siteName} experts. We'd love to hear from you.`}</p>
      </div>
    </div>
  </section>


  <!-- Contact Form and Image Section -->
  <section class="contact-form-section">
    <div class="container">
      <div class="contact-layout">
        <div class="contact-form-wrapper">
          <ContactForm />
        </div>
        <div class="contact-image-wrapper">
          <img 
            src="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" 
            alt="Professional team ready to help with your inquiries"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
/* Contact Hero Section */
.contact-hero {
  padding: 4rem 0 2rem 0;
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
}

.contact-hero-content {
  text-align: center;
  max-width: 600px;
  margin: 0 auto;
}

.contact-hero-title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--text-primary);
  font-family: var(--font-heading);
  margin: 0 0 1rem 0;
  line-height: 1.1;
}

.contact-hero-description {
  font-size: 1.25rem;
  color: var(--text-secondary);
  line-height: 1.6;
  margin: 0;
}

/* Contact Form Section */
.contact-form-section {
  padding: 6rem 0;
  background: var(--bg-secondary);
}

.contact-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.contact-form-wrapper {
  max-width: 100%;
}

.contact-image-wrapper {
  max-width: 100%;
}

.contact-image-wrapper img {
  width: 100%;
  height: auto;
  border-radius: var(--radius-xl);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  object-fit: cover;
  aspect-ratio: 4/3;
}


/* Mobile Responsiveness */
@media (max-width: 1024px) {
  .contact-layout {
    gap: 3rem;
  }
}

@media (max-width: 768px) {
  .contact-hero {
    padding: 3rem 0 1.5rem 0;
  }
  
  .contact-hero-title {
    font-size: 2.25rem;
  }
  
  .contact-hero-description {
    font-size: 1.125rem;
  }
  
  .contact-form-section {
    padding: 4rem 0;
  }
  
  .contact-layout {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .contact-image-wrapper {
    order: -1;
  }
}

@media (max-width: 640px) {
  .contact-hero-title {
    font-size: 1.875rem;
  }
  
  .contact-hero-description {
    font-size: 1rem;
  }
  
  .contact-form-section {
    padding: 3rem 0;
  }
  
  .contact-layout {
    gap: 2rem;
  }
}
</style>